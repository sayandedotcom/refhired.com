{
  "name": "@referrer/lib",
  "version": "1.0.0",
  "private": true,
  "description": "Referrer library containing common utilities for JWT, logging, and Redis.",
  "type": "module",
  "exports": "./index.ts",
  "main": "./index.ts",
  "scripts": {
    "lint": "eslint . --ext .ts,.js,.tsx,.jsx",
    "lint:fix": "eslint . --ext .ts,.js,.tsx,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,mdx}\" --cache",
    "clean": "rimraf .turbo node_modules dist",
    "type-check": "tsc --pretty --noEmit",
    "type-check:ci": "tsc-absolute --pretty --noEmit"
  },
  "dependencies": {
    "clsx": "^1.2.1",
    "ioredis": "^5.4.1",
    "jose": "^5.2.4",
    "tailwind-merge": "^1.12.0",
    "winston": "^3.17.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@referrer/prettier-config": "workspace:*",
    "@referrer/tsconfig": "workspace:*",
    "eslint-config-custom": "workspace:*",
    "@types/node": "^20.11.17",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  }
}
