{
	"name": "@refhiredcom/api",
	"version": "1.0.0",
	"main": "index.ts",
	"type": "commonjs",
	"license": "MIT",
	"scripts": {
		"dev": "tsx watch ./src/index.ts",
		"start": "node dist/index.js",
		"build": "tsc",
		"test": "echo \"No tests configured yet.\"",
		"clean": "rimraf .turbo node_modules dist",
    "lint": "eslint src/*",
    "lint:fix": "eslint src/* --fix",
    "format": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,mdx}\" --cache",
    "stripe:listen": "stripe listen --forward-to localhost:3000/api/webhook --latest",
    "type-check": "tsc --noEmit",
    "type-check:ci": "tsc-absolute --pretty --noEmit"
	},
	"dependencies": {
		"@referrer/prisma": "workspace:*",
		"@refhiredcom/validators": "workspace:*",
		"@referrer/lib": "workspace:*",
		"axios": "^1.6.7",
		"zod": "^3.21.4",
		"body-parser": "^1.20.2",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"express": "^4.18.2",
		"helmet": "^7.1.0",
		"jsonwebtoken": "^9.0.2",
		"morgan": "^1.10.0",
		"tsx": "^4.9.4"
	},
	"devDependencies": {
		"@referrer/prettier-config": "workspace:*",
		"@referrer/tsconfig": "workspace:*",
		"@refhiredcom/types": "workspace:*",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/morgan": "^1.9.9",
		"@types/node": "^20.11.17",
		"eslint-config-custom": "workspace:*",
		"nodemon": "^3.0.3",
		"eslint": "^8.57.0",
		"rimraf": "^5.0.5",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3"
	}
}
